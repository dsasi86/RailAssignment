<p style="color: green"><%= notice %></p>

<h1>Empdetails</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Designation</th>
    <th>Contact_number</th>
    <th>Address</th>
  </tr>
  <% @empdetails.each do |empdetail| %>
  <tr>
    <td width="80px"><%= empdetail.Name %></td>
    <td width="50px"><%= empdetail.Age %></td>
    <td width="50px"><%= empdetail.Gender %></td>
    <td width="150px"><%= empdetail.Designation %></td>
    <td width="120px"><%= empdetail.contact_number %></td>
    <td width="200px"><%= empdetail.address %></td>
    <td> <%= link_to "Show this empdetail", empdetail %> </td>
  </tr>
  <% end %>
</table>
<br />

<%= link_to "New empdetail", new_empdetail_path %>